<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
    <handlers>
    <add name="iisnode" path="index.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
    <rules>
    <rule name="Node.js Routing" stopProcessing="true">
    <match url="/*" />
    <action type="Rewrite" url="index.js" />
    </rule>
    </rules>
    </rewrite>
    <security>
    <requestFiltering>
    <hiddenSegments>
    <add segment="node_modules" />
    </hiddenSegments>
    </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
    </system.webServer>
</configuration>